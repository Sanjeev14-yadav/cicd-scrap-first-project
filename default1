server {
    listen 80;
    server_name 13.235.244.194;

    root /usr/share/nginx/html;
    index index.html;

    # Serve static files + handle React router paths
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Optional: Add CORS headers for static assets
    location ~* \.(js|css|json|png|jpg|jpeg|gif|ico|woff2?)$ {
        add_header 'Access-Control-Allow-Origin' '*';
        access_log off;
    }

    # Optional: favicon.ico fix
    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }
}
